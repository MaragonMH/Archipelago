{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Xenoblade X Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Launcher.py",
            "console": "integratedTerminal",
            "args": [
                "Xenoblade X Client",
                "--",
                "--debug"
            ],
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "Generate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Launcher.py",
            "console": "integratedTerminal",
            "args": [
                "Generate",
                "--",
                "--log_level",
                "debug"
            ],
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "Host",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Launcher.py",
            "console": "integratedTerminal",
            "args": [
                "Host",
                "--",
                "--loglevel",
                "debug",
                "--log_network",
                "--disable_save",
                "--hint_cost",
                "0"
            ],
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "Compile Cemu",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/worlds/xenobladex/cemu_graphicpack/compile.py",
            "console": "integratedTerminal",
            "args": [],
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "Xenoblade X Client 2",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Launcher.py",
            "console": "integratedTerminal",
            "args": [
                "Xenoblade X Client",
                "--",
                "--xeno_port",
                "45873"
            ],
            "autoReload": {
                "enable": true
            }
        }
    ]
}